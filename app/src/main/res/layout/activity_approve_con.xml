<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_handeling.ApproveCon">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Req_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Name"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_contactNo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                   />

                <TextView
                    android:id="@+id/Req_edit_contactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Contact Number"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_name" />

                <TextView
                    android:id="@+id/Req_edit_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Location"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_avlTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_contactNo" />

                <TextView
                    android:id="@+id/Req_edit_avlTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Available Time"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_location" />

                <TextView
                    android:id="@+id/Req_edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Description"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_Xp_years"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_avlTime" />

                <TextView
                    android:id="@+id/Req_edit_Xp_years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Years of Experience"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_Hospital_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_description" />



                <TextView
                    android:id="@+id/Req_edit_Hospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Hospital Name"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/btn_Req_edit_approve"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_Xp_years" />






                <Button
                    android:id="@+id/btn_Req_edit_approve"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Approve"
                    android:textSize="18sp"
                    android:background="@drawable/btn_round"
                    android:backgroundTint="#14b1ab"
                    app:layout_constraintBottom_toTopOf="@id/btn_Req_edit_reject"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Req_edit_Hospital_name" />

                <Button
                    android:id="@+id/btn_Req_edit_reject"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/btn_round"
                    android:backgroundTint="#e8505b"
                    android:hint="Reject"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/Req_edit_prBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_Req_edit_approve" />

                <ProgressBar
                    android:id="@+id/Req_edit_prBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_Req_edit_reject"
                    android:visibility="invisible"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>