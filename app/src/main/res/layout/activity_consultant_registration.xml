<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_handeling.ConsultantRegistration">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/conReg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Email Address"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />



                <EditText
                    android:id="@+id/conReg_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Name"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_contactNo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_email" />

                <EditText
                    android:id="@+id/conReg_edit_contactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Contact Number"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_name" />

                <EditText
                    android:id="@+id/conReg_edit_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Location"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_avlTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_contactNo" />

                <EditText
                    android:id="@+id/conReg_edit_avlTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Available Time"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_location" />

                <EditText
                    android:id="@+id/conReg_edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Consultant Description"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_Xp_years"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_avlTime" />

                <EditText
                    android:id="@+id/conReg_edit_Xp_years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Years of Experience"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_Hospital_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_description" />


                <EditText
                    android:id="@+id/conReg_edit_Hospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Hospital Name"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/btn_conReg_edit_save"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_Xp_years" />




                <Button
                    android:id="@+id/btn_conReg_edit_save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_round"
                    android:backgroundTint="#0f3460"
                    android:fontFamily="@font/poppins"
                    android:hint="Send Request"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/conReg_edit_prBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conReg_edit_Hospital_name" />

                <ProgressBar
                    android:id="@+id/conReg_edit_prBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_conReg_edit_save" />




            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
